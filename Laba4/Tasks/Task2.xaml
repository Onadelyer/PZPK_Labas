        <Label Content="Input" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top"/>
        <Label Content="Output" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top"/>
        <Label Name="MatchesLabel" Content="Matches: 0" HorizontalAlignment="Left" Margin="63,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ReplacedOutout" Margin="10,167,142,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" FontSize="16"/>
        <Label Content="Replaced output" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ReplaceText" Margin="663,167,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" FontSize="16"/>
        <Label Content="Replace with" HorizontalAlignment="Left" Margin="663,136,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
