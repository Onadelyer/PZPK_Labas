<Page x:Class="Laba10.Tasks.Task3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laba10.Tasks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task3">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Enter a day"/>
            <TextBox x:Name="inputTextBox" Width="200" Margin="5"/>
            <Button Content="Add Day" Click="AddDay_Click" Margin="5"/>
            <Button Content="Remove Day" Click="RemoveDay_Click" Margin="5"/>
            <Button Content="Traverse Tree" Click="TraverseTree_Click" Margin="5"/>
            <Label Content="Enter a day to search"/>
            <TextBox x:Name="searchTextBox" Width="200" Margin="5"/>
            <Button Content="Search Day" Click="SearchDay_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
